<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://example.com/notification/ws"
           xmlns:tns="http://example.com/notification/ws"
           elementFormDefault="qualified">

    <xs:element name="SendNotificationRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="notification" type="tns:notificationDto"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="SendNotificationResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="notification" type="tns:notificationEntity"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="ByEmployeeRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="empId" type="xs:long"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="ByEmployeeResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="notification" type="tns:notificationEntity" minOccurs="0" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="notificationDto">
        <xs:sequence>
            <xs:element name="id" type="xs:long" minOccurs="0"/>
            <xs:element name="employeeId" type="xs:long"/>
            <xs:element name="subject" type="xs:string"/>
            <xs:element name="body" type="xs:string"/>
            <xs:element name="channel" type="xs:string" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="notificationEntity">
        <xs:sequence>
            <xs:element name="id" type="xs:long" minOccurs="0"/>
            <xs:element name="employeeId" type="xs:long"/>
            <xs:element name="channel" type="xs:string"/>
            <xs:element name="subject" type="xs:string"/>
            <xs:element name="body" type="xs:string"/>
            <xs:element name="sentAt" type="xs:string" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>
